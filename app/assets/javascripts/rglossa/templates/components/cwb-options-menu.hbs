{{#each pos in tags}}
  {{#if pos.features}}
    <li class="dropdown-submenu">
    <a {{action addPos pos}}>{{pos.name}}</a>
      <ul class="dropdown-menu">
        {{#each feature in pos.features}}
          {{#if feature.name}}
          <li class="pos-feature-heading">{{feature.name}}</li>
          {{/if}}
          {{#each option in feature.options}}
            <li>
            <a {{action addFeature option feature pos}}>{{option.name}}</a>
            </li>
          {{/each}}
        {{/each}}
      </ul>
    </li>
  {{else}}
    <li>
    <a {{action addPos pos}}>{{pos.name}}</a>
    </li>
  {{/if}}
{{/each}}
