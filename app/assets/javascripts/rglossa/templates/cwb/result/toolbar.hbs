  </div>

  <!-- End action buttons -->

  <!-- Begin result paginator -->

  {{#if hasMoreThanOnePage}}
  <div class="pagination pagination-right">
    <ul>
      <li {{bindAttr class="isShowingFirstPage:disabled"}}>
        <a href="#" {{action showFirstPage}}>&laquo;&laquo;</a>
