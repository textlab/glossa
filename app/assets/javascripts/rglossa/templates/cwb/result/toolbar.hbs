      <li {{bindAttr class="isShowingFirstPage:disabled"}}>
        <a href="#" {{action showPreviousPage}}>&laquo;</a>
      </li>
      <li><span>Page</span></li>
      <li><span class="paginator-counter">{{view App.CurrentPaginatorPageView}}</span></li>
      <li><span>of {{numPages}} pages</a></li>
      <li {{bindAttr class="isShowingLastPage:disabled"}}>
        <a href="#" {{action showNextPage}}>&raquo;</a>
      </li>
      <li {{bindAttr class="isShowingLastPage:disabled"}}>
        <a href="#" {{action showLastPage}}>&raquo;&raquo;</a>
      </li>
    </ul>
  </div>
  {{/if}}

  <!-- End result paginator -->

</div>
