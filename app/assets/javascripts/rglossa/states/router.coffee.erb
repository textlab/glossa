App.Router.map (match) ->

  # fetches the corpus
  match('corp/:corpus_short_name').to 'corpus', (match) ->

    # redirects to the appropriate search interface for the corpus
    match('home').to 'home'

    # search interfaces
    match('search').to 'search', (match) ->

      # various CWB interfaces
      match('cwb').to 'cwb', (match) ->
        match('simple').to 'simple'
        match('regex').to  'regex'

      # Add routes for other search engines and interfaces as they are
      # implemented, e.g.:
      # match('corpuscle').to 'corpuscle', (match) ->
        # match('simple').to 'simple'
        # match('regex').to 'regex'

    # search results
    match('res/:search_id/:page_no').to 'results'
